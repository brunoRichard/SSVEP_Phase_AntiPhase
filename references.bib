	note = {Ding, Jian Sperling, George eng 2006/01/18 Proc Natl Acad Sci U S A. 2006 Jan 24;103(4):1141-6. doi: 10.1073/pnas.0509629103. Epub 2006 Jan 12.},
	number = {4},
	pages = {1141-6},
	title = {A gain-control theory of binocular combination},
