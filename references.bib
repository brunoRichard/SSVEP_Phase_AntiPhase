	keywords = {EEG, VEP, SSVEP, Vision, Contrast},
	pages = {108614},
	title = {Measuring contrast processing in the visual system using the steady state visually evoked potential (SSVEP)},
	url = {https://www.sciencedirect.com/science/article/pii/S0042698925000756},
	volume = {231},
	year = {2025},
